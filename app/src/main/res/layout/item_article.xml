<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/layout_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_article"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anh1"/>

        <TextView
            android:id="@+id/tv_name_article"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:maxHeight="50dp"
            android:text="Du lịch Hàn Quốc muùa Hoa Anh Đào bay VietNam Airlines 5 ngày từ Sài Gòn 2024"/>

        <TextView
            android:id="@+id/tv_date_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="04/4/2024"
            android:padding="5dp"
            android:textSize="15dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>