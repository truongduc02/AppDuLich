<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DCDCDC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4AA9BC">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarctsp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:title="Hạng thành viên"
            app:titleTextColor="@color/black"
            tools:ignore="NotSibling" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/backgound_rank"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="15dp"
        android:background="#7FFFD4"
        >
        <TextView
            android:id="@+id/name_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"></TextView>
        <TextView
            android:id="@+id/score_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 điểm"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:paddingRight="20dp"></TextView>

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="300dp"
            android:id="@+id/exp_bar"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:background="@color/white"></ProgressBar>
        <TextView
            android:id="@+id/con_lai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="45dp"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:text="Còn 5.000 điểm nữa để lên Thành viên Platinum"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:background="@color/white"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử tích điểm"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                ></TextView>

        </RelativeLayout>
        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Ưu đãi hiện có"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"></TextView>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rank_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành viên"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"></TextView>
        <TextView
            android:id="@+id/rank_sliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạc"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#C0C0C0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"></TextView>
        <TextView
            android:id="@+id/rank_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vàng"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#DAA520"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"></TextView>
        <TextView
            android:id="@+id/rank_platinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạch kim"
            android:textSize="16dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#00FA9A"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"></TextView>
    </LinearLayout>
    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_checked"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_check_24"></ImageView>
            <TextView
                android:id="@+id/no1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/ic_checked"
                android:textColor="@color/black"
                android:text="Cộng điểm sau khi sử dụng dịch vụ tại Traveally"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_checked_2"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_check_24"></ImageView>
            <TextView
                android:id="@+id/no2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/ic_checked_2"
                android:textColor="@color/black"
                android:text="Tặng 1500 điểm sinh nhật"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_checked_3"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_check_24"></ImageView>
            <TextView
                android:id="@+id/no3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/ic_checked_3"
                android:textColor="@color/black"
                android:text="Tặng 100 điểm dịp Lễ (30/4, 02/09), Tết (Dương lịch, Âm lịch)"></TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>